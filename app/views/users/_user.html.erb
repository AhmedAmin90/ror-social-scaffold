<ul>
<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %> </li>
  </span> 

  
  <% if user != current_user %>
  <%# if !current_user.pending_list.include?(user) && !current_user.friends_list.include?(user) %>
  <%= form_for Friend.create do |f| %>
  <%= f.hidden_field :user_id , value: user.id %>
  <%= f.hidden_field :friend_id , value: current_user.id%>
  <li> <%= f.submit "Add" %> </li>
  <%# end %>
  <%# end %>
  <%# else %>
    <li> <p> You and <%= "#{user.name}"%> in the waiting list </p> </li>
  <% end %>
<% end %>
  

</ul>