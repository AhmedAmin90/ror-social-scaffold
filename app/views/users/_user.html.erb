<ul>
<li>
  Name: <%= user.name %>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %> </li>
  </span> 

  
  <% if user != current_user %>
  <% if !current_user.pending_list.include?(user) %>
  <%= form_for current_user.friends.build do |f| %>
  <%= f.hidden_field :user_id%>
  <%= f.hidden_field :friend_id , value: user.id%>
  <%= f.submit "Add" %>
  <% end %>
  <% else %>
    <li> <p> You and <%= "#{user.name}"%> in the waiting list </p> </li>

  <% end %>
<% end %>
  

</ul>